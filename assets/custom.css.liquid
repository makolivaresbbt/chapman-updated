  transition: opacity 0.25s cubic-bezier(0.4, 0, 0.2, 1) 0s, visibility 0s linear 0.25s, z-index 0s linear 0.25s;
  /* Quantity */ 
}
  .mini-cart-visible .mini-cart {
    visibility: visible;
    opacity: 1;
    z-index: 7;
    transition-delay: 0s;
}
  .mini-cart a,
  .mini-cart img {
    display: block;
}
