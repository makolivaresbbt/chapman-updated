ul.product-list-item-variants {
    position: absolute;
    top: 25%;
    right: -100%;
    z-index: 9;
    background: #a69582;
    color: #FFF;
    width: 50px;
    transition: 0.3s all ease-in;
    padding: 0;
}

ul.product-list-item-variants li {
  padding: 10px;
}

.product-list-item__wrapper:hover > .product-list-item-variants {
    right: 0;
    transition: 0.3s all ease-in;
}

