    width: 80px;
    font-size: 12px;
}

@media screen and (max-width: 1112px) {
  .recommended-products .product-badges, 
  .home-featured-collection-list .product-badges,
  .product-badges {
      left: 0;
      border-radius: 0;
      width: 100%;
      height: auto;
      top: 0;
      padding: 4px;
  }
  .collection-product-count {
      position: relative;
      top: 0;
      text-align: center;
      width: auto;
      margin-left: 20px
  }
}
@media screen and (max-width: 575px) {
  .product-badges {
    width: 100%;
    top: 0;
  }
  .collection-product-count {
      margin-left: 0;
  }
}