    border: 0;
    background-color: transparent;
    font-size: 0.9375rem;
    color: currentColor;
    text-align: center;
    -webkit-appearance: none;
    appearance: none;
}
  .mini-cart .quantity__button {
    display: flex;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
    width: 1.375rem;
    padding: 0;
    border: 0;
    background-color: transparent;
    font-size: 1.125rem;
    color: #3d3838;
    cursor: pointer;
}
