    width: 5%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.mini-cart-item .ptt-add-button {
  display: none;
}

.mini-cart {
    position: absolute;
    visibility: hidden;
    opacity: 0;
    z-index: -1;
    right: 0;
    width: 100%;
    max-width: rem(460);
    background: $color-header-background;
    border-top: rem(1) solid $light-brown;
    transition: opacity $transition-medium $transition-easing 0s, visibility 0s linear $transition-medium, z-index 0s linear $transition-medium;
}
.mini-cart .mini-cart-visible & {
  visibility: visible;
  opacity: 1;
  z-index: 7;
  transition-delay: 0s;
}

.mini-cart a,
.mini-cart img {
  display: block;
}

/* Quantity */
.mini-cart .quantity {
  position: relative;
  display: flex;
  width: rem(70);
  height: rem(45);
  margin-right: rem(-6);
}

.mini-cart .quantity__input {
  flex-grow: 1;
  width: 100%;
  padding: 0 rem(5);
  border: 0;
  background-color: transparent;
  font-size: rem(15);
  color: currentColor;
  text-align: center;
  -webkit-appearance: none;
  appearance: none;
}

.mini-cart .quantity__button {
  display: flex;
  flex-shrink: 0;
  align-items: center;
  justify-content: center;
  width: rem(22);
  padding: 0;
  border: 0;
  background-color: transparent;
  font-size: rem(18);
  color: $color-text;
  cursor: pointer;
}

.mini-cart .quantity__button svg {
    width: rem(14);
    pointer-events: none;
}

.mini-cart .quantity__input::-webkit-outer-spin-button,
.mini-cart .quantity__input::-webkit-inner-spin-button {
  margin: 0;
  -webkit-appearance: none;
}

.mini-cart .quantity__input[type='number'] {
  -moz-appearance: textfield;
}
.mini-cart-overlay {
    position: fixed;
    visibility: hidden;
    z-index: -1;
    top: 0;
    left: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: rgba(150, 150, 150, 0.2);
    transition: opacity $transition-medium $transition-easing 0s, visibility 0s linear $transition-medium, z-index 0s linear $transition-medium;
}

.mini-cart .mini-cart-visible & {
    z-index: 5;
    visibility: visible;
    opacity: 1;
    transition-delay: 0s;
}

.mini-cart-header {
    position: relative;
    padding: rem(18) rem(15);
}

.mini-cart-header::after {
    position: absolute;
    bottom: 0;
    left: rem(15);
    right: rem(15);
    height: rem(1);
    display: block;
    background: $color-text;
    content: '';
}

.mini-cart-title {
    margin: 0;
    font-size: rem(16);
}

.mini-cart-close {
    position: absolute;
    top: 0;
    right: 0;
    width: rem(44);
    height: 100%;
    padding: 0;
    margin-right: 0;
    color: $color-text;
    background-color: transparent;
    line-height: 0;
    transition: color $transition-medium $transition-easing;
}

.mini-cart-close .icon-close {
    width: rem(24);
    height: rem(24);
}

.mini-cart-close:hover,
.mini-cart-close:active {
  background-color: transparent;
}

.mini-cart-close:active:focus {
  outline: 0;
  box-shadow: none;
}

.mini-cart-inner {
    max-height: rem(215);
    padding: 0 rem(15);
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.mini-cart-items {
    width: 100%;
    margin: 0;
    border: 0;
}

.mini-cart-items thead {
    display: none;
}

.mini-cart-items tr {
    display: grid;
    grid-template-areas:
    'media details details'
    'media . .'
    'media remove qty';
    grid-template-columns: rem(125) auto;
    width: 100%;
    border-top: rem(1) solid $color-text;
}
.mini-cart-items tr:first-child {
    border-top: 0;
}

.mini-cart-items td {
    padding: rem(15);
    border: 0;
}

td.mini-cart-item-media,
td.mini-cart-item-details,
td.mini-cart-item-remove,
td.mini-cart-item-qty {
    display: block;
    padding-right: 0;
    border-top: 0;
}

td.mini-cart-item-media {
    grid-area: media;
    padding: rem(25) rem(15) rem(25) 0;
}
td.mini-cart-item-media img {
    width: 100%;
    height: auto;
}

td.mini-cart-item-details {
    grid-area: details;
    padding-top: rem(25);
}

td.mini-cart-item-remove {
    grid-area: remove;
    align-self: end;
    padding: rem(10) 0 rem(19) rem(10);
    font-size: rem(12);
    letter-spacing: 0.1em;
    text-transform: uppercase;
}
td.mini-cart-item-remove a {
    display: inline-block;
    vertical-align: top;
    padding: rem(5);
}

td.mini-cart-item-qty {
    grid-area: qty;
    align-self: end;
    justify-self: end;
    padding-left: 0;
    padding-bottom: rem(13);
}

.mini-cart-item-title {
    margin: 0 0 rem(7);
    font-size: rem(16);
}

.mini-cart-item-option {
    font-size: rem(14);
}

.mini-cart-line-item-properties {
    margin-top: rem(15);
    font-size: rem(14);
}

.mini-cart-line-item-properties > span {
    display: block;
}

.mini-cart-footer {
    position: relative;
    padding: rem(25) rem(15) rem(20);
    text-align: right;
}

.mini-cart-footer::after {
    position: absolute;
    top: 0;
    left: rem(15);
    right: rem(15);
    height: rem(1);
    display: block;
    background: $color-text;
    content: '';
}

.mini-cart-footer.hide {
    display: none;
}

.mini-cart-footer .button {
    display: block;
    width: 100%;
    min-height: 0;
    margin-top: rem(24);
    margin-right: 0;
    text-align: center;
}

.mini-cart-subtotal {
    font-size: rem(15);
}

.mini-cart-subtotal-title {
    margin-right: rem(28);
}

.mini-cart-empty-message {
    padding: 0 rem(15);
}

@media screen and (max-width: 1112px) {
  .recommended-products .product-badges, 
  .home-featured-collection-list .product-badges,
  .product-badges {
      left: 0;
      border-radius: 0;
      width: 100%;
      height: auto;
      top: 0;
      padding: 4px;
  }
  .collection-product-count {
      position: relative;
      top: 0;
      text-align: center;
      width: auto;
      margin-left: 20px
  }
}

@media screen and (min-width:720px) {
  .template-cart .cart-items th {
      border-bottom: 1px solid #6a6a6a;
      padding-bottom: .5rem;
  }
  .template-cart .cart-items {
      border-bottom: 1px solid #6a6a6a;
  }
  .template-product .product-banner {
    max-width: 100%;
  }
  .product-banner {
      max-width: 70%;
  }

  .product-banner h4 span{
      font-size: .7rem;
  }
}
@media screen and (max-width: 575px) {
  .product-badges {
    width: 100%;
    top: 0;
  }
  .collection-product-count {
      margin-left: 0;
  }
}